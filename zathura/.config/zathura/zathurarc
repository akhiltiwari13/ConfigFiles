# Tokyonight color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers
#
# Tokyonight color theme
#
set notification-error-bg "#f7768e"
set notification-error-fg "#c0caf5"
set notification-warning-bg "#e0af68"
set notification-warning-fg "#414868"
set notification-bg "#24283b"
set notification-fg "#c0caf5"
set completion-bg "#24283b"
set completion-fg "#a9b1d6"
set completion-group-bg "#24283b"
set completion-group-fg "#a9b1d6"
set completion-highlight-bg "#414868"
set completion-highlight-fg "#c0caf5"
set index-bg "#24283b"
set index-fg "#c0caf5"
set index-active-bg "#414868"
set index-active-fg "#c0caf5"
set inputbar-bg "#24283b"
set inputbar-fg "#c0caf5"
set statusbar-bg "#24283b"
set statusbar-fg "#c0caf5"
set highlight-color "#e0af68"
set highlight-active-color "#9ece6a"
set default-bg "#24283b"
set default-fg "#c0caf5"
set render-loading true
set render-loading-fg "#24283b"
set render-loading-bg "#c0caf5"
#
# Recolor mode settings
# <C-r> to switch modes
#
set recolor-lightcolor "#24283b"
set recolor-darkcolor "#c0caf5"
set font "Cascadia Mono Bold 9.5"

# Navigation (matching your hjkl preference)
map h navigate previous
map l navigate next
map j scroll down
map k scroll up
map H goto top
map L goto bottom

# Search (matching your <leader>s* pattern in nvim)
map <Space>f follow
map <Space>s search
map <Space>n search next
map <Space>N search previous

# View controls (consistent with your workflow)
map <Space>r reload
map <Space>q quit
map <Space>t toggle_statusbar
map <Space>i toggle_index

# Page navigation (more intuitive)
map <C-d> scroll half-down
map <C-u> scroll half-up
map <C-f> scroll full-down
map <C-b> scroll full-up

# Zoom controls
map = zoom in
map - zoom out
map 0 zoom default

# Fit modes
map a adjust_window best-fit
map w adjust_window width
map <Space>a adjust_window

# Copy/clipboard (matching your clipboard workflow)
map y copy

# Better defaults matching cocoEd.nvim setup
set pages-per-row 1
set scroll-page-aware true
set scroll-step 50
set zoom-min 10
set zoom-max 1000
set incremental-search true
set highlight-transparency 0.5

# Status bar customization
set statusbar-home-tilde true
set window-title-basename true
set selection-clipboard clipboard

# Better search
set search-hadjust true
set smooth-scroll true
